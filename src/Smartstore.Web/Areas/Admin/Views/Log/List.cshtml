    $(function() {
        $('#btnSearch').on("click", x => {
            var grid = window["log-grid"];
            grid.currentPage = 1;
            return false;
        });

        $("#@Html.IdFor(x => x.Message), #@Html.IdFor(x => x.Logger)").on("keydown", event => {
            if (event.keyCode == 13) {
                // On enter key pressed - submit/return form.
                $("#btnSearch").click();
                return false;
            }
        });
    });
</script>