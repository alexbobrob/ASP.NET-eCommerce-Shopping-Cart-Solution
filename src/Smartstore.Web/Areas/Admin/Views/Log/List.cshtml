        command.CreatedOnFrom = $('#@Html.IdFor(model => model.CreatedOnFrom)').val();
        command.CreatedOnTo = $('#@Html.IdFor(model => model.CreatedOnTo)').val();
        command.Logger = $('#@Html.IdFor(model => model.Logger)').val();
        command.Message = $('#@Html.IdFor(model => model.Message)').val();
        command.LogLevelId = $('#@Html.IdFor(model => model.LogLevelId)').val();
