@model ProductAttributeModel

@{  
    ViewBag.Title = T("Admin.Catalog.Attributes.ProductAttributes").Value;
}
<div class="section-header">
    <div class="title">
        <i class="fa fa-list-alt"></i>
        @T("Admin.Catalog.Attributes.ProductAttributes")
    </div>
    <div class="options">
        <a href="@Url.Action("Create")" class="btn btn-primary">
			<i class="fa fa-plus"></i>
			<span>@T("Admin.Common.AddNew")</span>
		</a>
    </div>
</div>

<datagrid id="productattributes-grid">
    <datasource read="@Url.Action("List")" />
    <pageable />
    <columns>
        <column for="Name" />
        <column for="Alias" />
        <column for="AllowFiltering" />
        <column for="DisplayOrder" />
    </columns>
</datagrid>

