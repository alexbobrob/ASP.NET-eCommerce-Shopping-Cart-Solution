@model CategoryListModel

@{
    ViewBag.Title = T("Admin.Catalog.Categories.Manage").Value;

	Assets.BodyAttributes.AppendCssClass("spa-layout");

    var gridViewData = new ViewDataDictionary(ViewData);
    gridViewData["Parent"] = Model;
}

@if (!Display.ZoneHasContent("datagrid_toolbar_after"))
{
	// TODO: (mg) (core) We shouldn't render antiforgery tokens outside of forms. Please read my e-mail:
	// If your grid is editable or selectable, the token is created by the TagHelper for you. Otherwise you have to
	// decorate your read actions with IgnoreAntiforgeryTokenAttribute.
	@Html.AntiForgeryToken()
}

<div class="section-header">
    <div class="title">
        <i class="fa fa-sitemap"></i>
        <span>@ViewBag.Title</span>

		<div class="btn-group ml-2">
			<a class="btn btn-outline-secondary btn-sm tooltip-toggle active" style="cursor:default" href="javascript:void(0)">
				<i class="fa fa-bars"></i>
			</a>
			<a asp-action="Tree" class="btn btn-outline-secondary btn-sm tooltip-toggle" title="@T("Admin.Catalog.Categories.SwitchToTreeView")">
				<i class="fa fa-sitemap"></i>
			</a>
		</div>
    </div>
    <div class="options">
		<zone name="admin_button_toolbar_before" />
		<zone name="admin_button_toolbar_after" />
    </div>
</div>

<partial name="_Grid.Categories" model="null" view-data="gridViewData" />