@model ExportPreviewNewsletterSubscriptionModel

@{
	var parentModel = ViewData["Parent"] as ExportPreviewModel;
}

<datagrid id="newsletter-subscriptions-preview-grid" 
		allow-resize="true" 
		allow-column-reordering="true" 
		allow-row-selection="true" 
		preserve-grid-state="true">
	<datasource read="@Url.Action("PreviewList", new { id = parentModel.Id })" />
	<paging position="Bottom" show-size-chooser="true" />
	<toolbar>
        <toolbar-group class="border-right-0 mr-0 pr-0">
            <button type="button" id="ExportSelected" class="btn btn-light btn-flat" v-bind:class="{ disabled: !grid.hasSelection }">
				<i class="far fa-upload"></i>
				<span>@T("Admin.Common.ExportSelected")</span>
            </button>
            <button type="button" id="ExportAll" class="btn btn-light btn-flat">
				<i class="far fa-upload"></i>
				<span>@T("Admin.Common.ExportAll")</span>
            </button>
        </toolbar-group>
	</toolbar>
	<columns>
		<column for="Id" halign="center" />
		<column for="Email" />
		<column for="Active" halign="center" />
		<column for="StoreName" />
		<column for="CreatedOn" />
	</columns>
</datagrid>