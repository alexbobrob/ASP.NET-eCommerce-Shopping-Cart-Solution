                    <div class="mb-1">
                        <bootstrap-icon name="pc-display" class="mr-2 text-danger" font-scale="3" rotate="270" scale="2" flip-v="true" animation="IconAnimation.CylonVertical" />

                        <bootstrap-iconstack font-scale="7">
                            <bootstrap-icon name="square-fill" />
                            <bootstrap-icon name="arrow-up-short" fill="yellow" scale="0.5F" shift-y="3" shift-x="-3" animation="IconAnimation.CylonVertical" />
                            <bootstrap-icon name="arrow-up-short" fill="#fff" scale="0.5F" shift-y="3" shift-x="3" rotate="90" animation="IconAnimation.Fade" />
                            <bootstrap-icon name="arrow-up-short" fill="green" scale="0.5F" shift-y="-3" shift-x="3" rotate="180" animation="IconAnimation.Beat" />
                            <bootstrap-icon name="arrow-up-short" fill="blue" scale="0.5F" shift-y="-3" shift-x="-3" rotate="270" animation="IconAnimation.Spin" />
                        </bootstrap-iconstack>
                    </div>
                </div>*@
                @RenderBody()
            </div>
            <div id="ajax-busy">
                <div class="bar"></div>
