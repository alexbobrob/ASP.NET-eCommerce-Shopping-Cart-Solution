@using Smartstore.Utilities

@functions{
    private string Value
    {
        get
        {
            string value = null;
            if (ViewData.Model != null)
            {
                value = Convert.ToString(ViewData.Model);
            }
            return value;
        }
    }
}

@{
    var attributes = new AttributeDictionary().Merge(CommonHelper.ObjectToDictionary(ViewData["htmlAttributes"] ?? new object()));
    var cols = GetMetadata<string>("cols");
    var rows = GetMetadata<string>("rows");
}

<textarea asp-for="@Model" attrs="attributes" attr-cols="(cols.HasValue(), cols)" attr-rows="(rows.HasValue(), rows)" value="@Value.EmptyNull()" class="form-control"></textarea>
