@functions{
    private string Value
    {
        get
        {
            string value = null;
            if (ViewData.Model != null)
            {
                value = Convert.ToString(ViewData.Model);
            }
            return value;
        }
    }
}

<colorbox name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" 
          value="@Value.EmptyNull()" 
          sm-default-color="@(ViewData["fallbackColor"].Convert<string>())" />