@using Smartstore.Utilities

@functions{
    private string Value
    {
        get
        {
            string value = null;
            if (ViewData.Model != null)
            {
                value = Convert.ToString(ViewData.Model);
            }
            return value;
        }
    }
}

@{
    var attributes = new AttributeDictionary().Merge(CommonHelper.ObjectToDictionary(ViewData["htmlAttributes"] ?? new object()));
}

<input asp-for="@Model" attrs="attributes" value="@Value.EmptyNull()" class="form-control" sm-required="ViewData.ModelExplorer.Metadata.IsRequired" />
