@{ 
    var theme = Display.GetThemeManifest().ThemeName.ToLower();
}

<widget target-zone="head_stylesheets">
    <link rel="stylesheet" href="~/themes/@(theme)/theme.css" />
    @if (WorkContext.WorkingLanguage.Rtl)
    {
        <link rel="stylesheet" href="~/themes/@(theme)/theme-rtl.css" />
    } 
</widget>
