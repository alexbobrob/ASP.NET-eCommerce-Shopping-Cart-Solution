<!DOCTYPE html>
<html sm-language-attributes-for="WorkContext.WorkingLanguage" data-pnotify-firstpos1="0">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, viewport-fit=cover, shrink-to-fit=no" />
    <meta name="HandheldFriendly" content="true">
    <meta name="description" content="@Assets.GetMetaDescription()" />
    <meta name="keywords" content="@Assets.GetMetaKeywords()" />
    <meta property="sm:root" content="@Url.Content("~/")" />

    <title itemprop="name">Smartstore - @Assets.GetDocumentTitle(true)</title>

    <partial name="_HeadScripts" />
    <partial name="_GoogleFonts" />

    <zone name="head_stylesheets">
        <link rel="stylesheet" href="~/bundles/css/common.css" />
        <link rel="stylesheet" href="~/bundles/css/theme.css" />
    </zone>

    <zone name="head_scripts">
        <script src="~/bundles/js/common.js"></script>
    </zone>

    <script src="~/js/smartstore.globalization.adapter.js"></script>

    <zone name="head_canonical"></zone>
    <zone name="head_links"></zone>
    <zone name="head"></zone>

    @await Component.InvokeAsync("Favicon")

    <mini-profiler />
</head>

<body class="lyt-cols-1">
    <zone name="start" />
    <zone name="body_start_html_tag_after" /> @* Legacy compat *@
    @RenderBody()
    <zone name="aftercontent" />

    <zone name="scripts">
        <script src="~/bundles/js/site.js"></script>
        <script src="~/lib/select2/js/i18n/{lang}.js" sm-locale-for="WorkContext.WorkingLanguage"></script>
        <script src="~/lib/moment/locale/{lang}.js" sm-locale-for="WorkContext.WorkingLanguage"></script>
    </zone>
    <zone name="end" />
</body>
</html>
