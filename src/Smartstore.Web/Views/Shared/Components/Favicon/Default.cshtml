@using Smartstore.Core

@model FaviconModel

@if (Model.FavIconThumbnail.HasValue())
{
    <link rel="shortcut icon" href='@($"{Model.FavIconThumbnail}?v={ SmartstoreVersion.CurrentVersion}")' />
}

@if (Model.PngIconThumbnails.Count > 0)
{
    <!-- png icons -->
    foreach (var thumbnail in Model.PngIconThumbnails)
    {
        <link sm-if="thumbnail.Url.HasValue()" rel="icon" type="image/png" sizes="@thumbnail.Size" href="@thumbnail.Url" />
    }
}

@if (Model.AppleTouchIconThumbnails.Count > 0)
{
    <!-- Apple touch icons -->
    foreach (var thumbnail in Model.AppleTouchIconThumbnails)
    {
        <link sm-if="thumbnail.Url.HasValue()" rel="icon" type="image/png" sizes="@thumbnail.Size" href="@thumbnail.Url" />
    }
}

@if (Model.MsTileIconThumbnail.HasValue())
{
    <!-- Microsoft tiles -->
    if (Model.MsTileColor.HasValue())
    {
        <meta name="msapplication-TileColor" content="@Model.MsTileColor">
    }
    <meta name="msapplication-TileImage" content="@Model.MsTileIconThumbnail">
    <meta name="msapplication-config" content="@Url.Content("~/browserconfig.xml")" />
}