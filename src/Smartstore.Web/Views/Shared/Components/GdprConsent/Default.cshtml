@model Smartstore.Web.Models.Common.GdprConsentModel

@using Smartstore.Utilities

@{
    var id = "gdpr-consent-" + CommonHelper.GenerateRandomInteger();

    // TODO: (mh) (core) Url.Topic("privacyinfo")
    var privacyInfoUrl = "";
}

<div class="form-group row gdpr-consent @(Model.SmallDisplay ? "small" : "")">
    <div class="col form-control-plaintext">
        <div class="form-check">
            @Html.CheckBoxFor(model => model.GdprConsent, new { @class = "form-check-input gdpr-consent-check", @id = id })
            <label class="form-check-label" for="@id">
                @Html.Raw(T("Gdpr.Consent.DetailText" + (Model.SmallDisplay ? ".Small" : ""), privacyInfoUrl))
            </label>
        </div>
        @Html.ValidationMessageFor(model => model.GdprConsent)
    </div>
</div>
