{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Debug",
      "Serilog.Sinks.File",
      "Serilog.Expressions",
      "Smartstore.Core" 
    ],
    "LevelSwitches": {
      "$appSwitch": "Verbose",
      "$systemSwitch": "Verbose"
    },
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Verbose",
        "System": "Verbose",
        "Microsoft.EntityFrameworkCore": "Verbose"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        // The INSTALL logger
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [],
            "WriteTo": [
              {
                "Name": "Async",
                "Args": {
                  "configure": [
                    {
                      "Name": "File",
                      "Args": {
                        "path": "App_Data/Logs/install-.log",
                        "outputTemplate": "{Timestamp:G} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
                        "fileSizeLimitBytes": 100000000,
                        "shared": true,
                        "rollingInterval": "Day",
                        "flushToDiskInterval": "00:00:05",
                        "rollOnFileSizeLimit": true
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "path": "App_Data/Logs/Smartstore-.log",
          "rollingInterval": "Day",
          //"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ffff}|{MachineName}|{RequestId}|{SourceContext}|{Level:u3}|{Message:lj}{NewLine}{Exception}",
          //"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "DbContext",
        "Args": {
          "period": "00:00:05",
          "batchSize": 50,
          "queueLimit": 1000,
          "eagerlyEmitFirstEvent": false
        }
      }
    ]
  }
}