{
  "Title": "Flex",
  "Description": "'Flex' default theme",
  "Author": "SmartStore AG",
  "Selects": {
    "brand-colors": [ "primary", "secondary", "info", "success", "warning", "danger", "light", "dark" ]
  },
  "Variables": {
    // Common colors
    "gray-100": {
      "Type": "Color",
      "Value": "#f7f7f9"
    },
    "gray-200": {
      "Type": "Color",
      "Value": "#e9ecef"
    },
    "gray-300": {
      "Type": "Color",
      "Value": "#dee2e6"
    },
    "gray-400": {
      "Type": "Color",
      "Value": "#ced4da"
    },
    "gray-500": {
      "Type": "Color",
      "Value": "#b0bac3"
    },
    "gray-600": {
      "Type": "Color",
      "Value": "#8d9ba9"
    },
    "gray-700": {
      "Type": "Color",
      "Value": "#596167"
    },
    "gray-800": {
      "Type": "Color",
      "Value": "#393f46"
    },
    "gray-900": {
      "Type": "Color",
      "Value": "#22262a"
    },
    "red": {
      "Type": "Color",
      "Value": "#f44336"
    },
    "orange": {
      "Type": "Color",
      "Value": "#ee9B00"
    },
    "yellow": {
      "Type": "Color",
      "Value": "#ffeb3b"
    },
    "green": {
      "Type": "Color",
      "Value": "#4caf50"
    },
    "blue": {
      "Type": "Color",
      "Value": "#37a0e6"
    },
    "bluegrey": {
      "Type": "Color",
      "Value": "#78909c"
    },
    "indigo": {
      "Type": "Color",
      "Value": "#3f51b5"
    },
    "teal": {
      "Type": "Color",
      "Value": "#009688"
    },
    "cyan": {
      "Type": "Color",
      "Value": "#00bcd4"
    },
    "purple": {
      "Type": "Color",
      "Value": "#ff5b77"
    },
    "pink": {
      "Type": "Color",
      "Value": "#ff5b77"
    },

    // Brand colors
    "primary": {
      "Type": "Color",
      "Value": "$indigo"
    },
    "secondary": {
      "Type": "Color",
      "Value": "$gray-600"
    },
    "success": {
      "Type": "Color",
      "Value": "$green"
    },
    "danger": {
      "Type": "Color",
      "Value": "$red"
    },
    "warning": {
      "Type": "Color",
      "Value": "$orange"
    },
    "info": {
      "Type": "Color",
      "Value": "$blue"
    },
    "light": {
      "Type": "Color",
      "Value": "lighten($gray-200, 2%)"
    },
    "dark": {
      "Type": "Color",
      "Value": "$gray-900"
    },
    "brand-colors": {
      "Type": "String",
      "Value": "primary,secondary,success,danger,warning,info,light,gray,dark"
    },

    // Common variables
    "border-radius": {
      "Type": "String",
      "Value": "0.25rem"
    },
    "border-radius-lg": {
      "Type": "String",
      "Value": "0.3rem"
    },
    "border-radius-sm": {
      "Type": "String",
      "Value": "0.2rem"
    },

    // Layout
    "boxed": {
      "Type": "Boolean",
      "Value": "false"
    },

    //  Main site colors
    "site-bg": {
      "Type": "Color",
      "Value": "$gray-100"
    },
    "body-bg": {
      "Type": "Color",
      "Value": "#fff"
    },
    "body-color": {
      "Type": "Color",
      "Value": "$gray-800" 
    },
    "yiq-text-dark": {
      "Type": "Color",
      "Value": "$gray-900"
    },
    "yiq-text-light": {
      "Type": "Color",
      "Value": "#fff"
    },
    "text-muted": {
      "Type": "Color",
      "Value": "$gray-600"
    },
    "link-color": {
      "Type": "Color",
      "Value": "#0066c0"
    }
  }
}