@model PublicEditForumPostModel

@{
    var cancelUrl = Url.RouteUrl("ForumTopicBySlug", new { id = Model.ForumTopicId, slug = Model.ForumTopicSlug });
    if (Model.Id != 0)
    {
        cancelUrl += "#" + Model.Id;
    }
}

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="ForumTopicId" />

<div class="page post-edit">
    <div class="page-title">
        <h2>@T(Model.Id == 0 ? "Forum.NewPost" : "Forum.EditPost")</h2>
    </div>
    <div class="message-error">
        <div asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="form-group row pt-3">
        <label class="col-sm-3">@T("Forum.ForumName")</label>
        <div class="col-sm-9" dir="auto">@Model.ForumName</div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3">@T("Forum.TopicSubject")</label>
        <div class="col-sm-9" dir="auto">@Model.ForumTopicSubject</div>
    </div>
    <div class="row justify-content-end">
        <div class="col-sm-9 my-3" dir="auto">
            @if (Model.ForumEditor == EditorType.BBCodeEditor)
            {
                <script src="~/lib/editors/BBEditor/ed.js"></script>
                <script>edToolbar('Text');</script>
            }
            <textarea asp-for="Text" class="form-control forum-post-text" rows="6" textmode="MultiLine"></textarea>
            <span asp-validation-for="Text"></span>
        </div>
    </div>
    <div sm-if="Model.IsModerator && !Model.IsFirstPost" class="row justify-content-end">
        <div class="col-sm-9">
			<div class="form-check">
                <input asp-for="Published" type="checkbox" class="form-check-input" />
			    <label asp-for="Published" class="form-check-label">@T("Common.Published")</label>
			</div>
        </div>
    </div>
    <div sm-if="Model.CanSubscribe" class="row justify-content-end">
        <div class="col-sm-9">
			<div class="form-check">
                <input asp-for="IsSubscribed" type="checkbox" class="form-check-input" />
				<label asp-for="IsSubscribed" class="form-check-label">@T("Forum.NotifyWhenSomeonePostsInThisTopic")</label>
			</div>
        </div>
    </div>

	<div class="row justify-content-end">
		<div class="col-sm-9">
			<zone name="gdpr_consent" />
		</div>
	</div>

    <captcha sm-enabled="Model.DisplayCaptcha" class="form-group row" />

    <div class="row justify-content-end">
        <div class="col-sm-9 mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-reply"></i>
                <span>@T("Forum.Submit")</span>
            </button>
            <a class="btn btn-secondary" href="@cancelUrl">
                <i class="fa fa-times"></i>
                <span>@T("Forum.Cancel")</span>
            </a>
        </div>
    </div>
</div>
