@model PublicEditForumTopicModel

@{
    var cancelUrl = Model.Id == 0 
        ? Url.RouteUrl("ForumBySlug", new { id = Model.ForumId, slug = Model.ForumSlug })
        : Url.RouteUrl("ForumTopicBySlug", new { id = Model.Id, slug = Model.Slug });
}

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="ForumId" />

<div class="page post-edit">
    <div class="page-title">
        <h2>@T(Model.Id == 0 ? "Forum.NewTopic" : "Forum.EditTopic")</h2>
    </div>
    <div class="message-error">
        <div asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="form-group row pt-3">
        <label asp-for="ForumName" class="col-sm-3">@T("Forum.ForumName")</label>
        <div class="col-sm-9" sm-language-attributes-for="Model.ForumName">@Model.ForumName</div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">@T("Forum.TopicTitle")</label>
        <div class="col-sm-9">
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject"></span>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-sm-9 my-3" dir="auto">
            @if (Model.ForumEditor == EditorType.BBCodeEditor)
            {
                <script src="~/lib/editors/BBEditor/ed.js"></script>
                <script>edToolbar('Text');</script>
            }
            <textarea asp-for="Text" class="form-control forum-post-text" rows="6" textmode="MultiLine"></textarea>
            <span asp-validation-for="Text"></span>
        </div>
    </div>
    <div sm-if="Model.IsModerator" class="form-group row">
        <label class="col-sm-3 col-form-label">@T("Forum.Priority")</label>
        <div class="col-sm-9">
            <select asp-for="TopicTypeId" asp-items="ViewBag.ForumTopicTypes" class="form-control"></select>
        </div>
    </div>
    <div sm-if="Model.IsModerator" class="row justify-content-end">
        <div class="col-sm-9">
			<div class="form-check">
                <input asp-for="Published" type="checkbox" class="form-check-input" />
			    <label asp-for="Published" class="form-check-label">@T("Common.Published")</label>
			</div>
        </div>
    </div>
    <div sm-if="Model.IsModerator" class="row justify-content-end">
        <div class="col-sm-9">
			<div class="form-check">
                <input asp-for="IsSubscribed" type="checkbox" class="form-check-input" />
				<label asp-for="IsSubscribed" class="form-check-label">@T("Forum.NotifyWhenSomeonePostsInThisTopic")</label>
			</div>
        </div>
    </div>

	<div class="row justify-content-end">
		<div class="col-sm-9">
			<zone name="gdpr_consent" />
		</div>
	</div>

    <captcha sm-enabled="Model.DisplayCaptcha" class="form-group row" />

    <div class="row justify-content-end">
        <div class="col-sm-9 mt-3">
            <button type="submit" class="btn btn-primary">
				<i class="fa fa-reply"></i>
                <span>@T("Forum.Submit")</span>
			</button>
            <a class="btn btn-secondary" href="@cancelUrl">
                <i class="fa fa-times"></i>
                <span>@T("Forum.Cancel")</span>
            </a>
        </div>
    </div>    
</div>