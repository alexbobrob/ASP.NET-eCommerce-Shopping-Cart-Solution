@model ActiveDiscussionsModel

<div class="active-discussions mt-5">
    <div class="row">
        <div class="col">
            <div class="heading mb-4">
                <h1 class="heading-title @(Model.IsActiveDiscussionsPage ? "fs-h1" : "fs-h3")">
                    @T("Forum.ActiveDiscussions")
                </h1>
            </div>
        </div>
        <div class="col col-auto mb-3 mb-0-sm">
            @if (Model.ActiveDiscussionsFeedEnabled)
            {
                <a asp-action="ActiveDiscussionsRss" asp-controller="Boards" class="btn btn-warning" title="@T("Forum.ActiveDiscussionsRSSLinkTitle")">
                    <i class="fa fa-rss"></i>
                    <span>@T("Forum.RSS")</span>
                </a>
            }
            @if (!Model.IsActiveDiscussionsPage)
            {
                <a asp-route="ForumActiveDiscussions" class="btn btn-outline-info btn-flat">
                    <i class="fa fa-th-list"></i>
                    <span>@T("Forum.ActiveDiscussions.ViewAll")</span>
                </a>
            }
        </div>
    </div>
    <div class="active-discussionstopics table-responsive">
        <table class="table forum-table">
            <thead sm-if="Model.ForumTopics.Any()">
                <tr class="active-discussions-header">
                    <th></th>
                    <th class="topic-name">
                        @T("Forum.TopicTitle")
                    </th>
                    <th class="replies">
                        @T("Forum.Replies")
                    </th>
                    <th class="views">
                        @T("Forum.Views")
                    </th>
                    <th class="last-post">
                        @T("Forum.LatestPost")
                    </th>
                </tr>
            </thead>
            @foreach (var topic in Model.ForumTopics)
            {
                <tr class="topic">
                    <td class="image">
                        <partial name="Customer.Avatar" model="topic.Avatar" />
                    </td>
                    <td class="topic-name">
                        <a asp-route="ForumTopicBySlug" asp-route-id="@topic.Id" asp-route-slug="@topic.Slug" class="topic-title forum-table-link">
                            @topic.Subject
                        </a>
                        <div>
                            <div sm-if="topic.CustomerId > 0" class="topic-starter text-muted d-inline-flex">
                                <span class="pr-1">@T("Forum.Author"):</span>
				                @if (topic.HasCustomerProfile)
				                {
					                <a asp-route="CustomerProfile" asp-route-id="@topic.CustomerId" class="forum-table-link">
						                @topic.CustomerName.NaIfEmpty()
					                </a>
				                }
				                else
				                {
					                <span>@topic.CustomerName</span>
				                }
                            </div>
                            @if (topic.PostsPages.TotalPages > 1)
                            {
                                <forumtopic-pagination class="topics-pager"
                                    sm-list-items="topic.PostsPages"
                                    sm-topic-id="topic.Id"
                                    sm-topic-slug="@topic.Slug"
                                    sm-show-previous="false"
                                    sm-show-next="false"
                                    sm-item-title-format-string="@T("Forum.Topics.GotoPostPager")"
                                    sm-alignment="Left"
                                    sm-size="Mini" />
                            }
                        </div>
                    </td>
                    <td class="replies">
                        @topic.NumReplies.ToString("N0")
                    </td>
                    <td class="views">
                        @topic.Views.ToString("N0")
                    </td>
                    <td class="last-post">
                        <partial name="_LastPost" model="topic.LastPost" />
                    </td>
                </tr>
            }
        </table>
    </div>

    @if (Model.IsActiveDiscussionsPage)
    {
        <pagination sm-list-items="Model.ForumTopics" />
    }
</div>